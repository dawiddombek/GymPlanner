@model Serie

@{
    ViewData["Title"] = "Create";
    int exerciseId = (int)ViewBag.exerciseId;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Serie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ExcerciseId" type="hidden" value="@exerciseId" />
            <div class="form-group">
                <label asp-for="numberOfRepetitions" class="control-label"></label>
                <input asp-for="numberOfRepetitions" class="form-control" />
                <span asp-validation-for="numberOfRepetitions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="weight" class="control-label"></label>
                <input asp-for="weight" class="form-control" />
                <span asp-validation-for="weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
